<h1 class="header">Listing offices</h1>
<div class="table-responsive">
</br>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Room no</th>
      <th>Floor</th>
      <th>Incharge name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
      	<%=will_paginate(@offices)%>
      </tr>
    <% @offices.each_with_index do |office,index| %>
      <tr>
        <% if params[:page].to_i == 0%>
    	    <td><%= index+1%></td>
	      <%else%>  
        <td><%= (params[:page].to_i-1)*5+index+1%></td>
		<%end%>
        <td><%= office.name %></td>
        <td><%= office.room_no %></td>
        <td><%= office.floor %></td>
        <td><%= office.incharge_name %></td>
        <td><%= link_to 'Show', office %></td>
        <td><%= link_to 'Edit', edit_office_path(office) %></td>
        <td><%= link_to 'Destroy', office, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Office', new_office_path %>
