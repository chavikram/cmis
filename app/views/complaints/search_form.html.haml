= simple_form_for @complaint, url: complaint_path(@complaint),:method=>:get, :html => {:class => "form-horizontal center"} do |f|
  %div.form-group
    %center
      - if @complaint.errors.any?
        #error_explanation
          %h2= "#{pluralize(@complaint.errors.count, "error")} prohibited this complaint from being saved:"
          %ul
            - @complaint.errors.full_messages.each do |msg|
              %li= msg
  %div.form-group
    = f.label :id, "Complaint No:", class: "col-md-4 control-label"
    %div.col-md-8
      = f.text_field :id, :class=> "form-control"
  %div.form-group.center
    %div.col-md-4
    = f.submit 'Submit', class: "btn btn-default btn-primary"
    = f.submit 'Reset', :type=> :reset, class: "btn btn-default btn-primary"
